{% extends 'base.html.twig' %}

{% block title %}{{ people}}{% endblock %}

{% block body %}
    <h1>{{ people}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ person.firstName }}</td>
            </tr>
            <tr>
                <th>Nom de famille</th>
                <td>{{ person.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('people_index') }}">Retourner à la liste</a>

    <a href="{{ path('people_edit', {'id': person.id}) }}">Modifier</a>

    {{ include('people/_delete_form.html.twig') }}
{% endblock %}